{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "hugo:watch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "hugo:watch"],
      "console": "integratedTerminal"
    },
    {
    "type": "node",
    "request": "launch",
    "name": "(debug) database sync",
    "runtimeExecutable": "${env:NVM_DIR}/nvm-exec",
    "runtimeArgs": ["node"],
    "program": "${workspaceFolder}/src/NotionCli.mjs",
    "args": ["database", "sync"],
    "envFile": "${workspaceFolder}/.env",
    "console": "internalConsole",
    "outputCapture": "std",
    "autoAttachChildProcesses": true,
    "cwd": "${workspaceFolder}",
    "timeout": 30000 
  },
    {
      "type": "node",
      "request": "launch",
      "name": "(debug) database view",
      "runtimeExecutable": "${env:NVM_DIR}/nvm-exec",
      "program": "${workspaceFolder}/src/NotionCli.mjs",
      "args": ["database", "view"],
      "envFile": "${workspaceFolder}/.env",
      "console": "internalConsole"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "(debug) page sync",
      "runtimeExecutable": "${env:NVM_DIR}/nvm-exec",
      "program": "${workspaceFolder}/src/NotionCli.mjs",
      "args": ["page", "sync", "${input:pageId}"],
      "envFile": "${workspaceFolder}/.env",
      "console": "internalConsole"
    }
  ],
  "inputs": [
    {
      "id": "pageId",
      "type": "promptString",
      "description": "Notion Page ID"
    }
  ]
}
